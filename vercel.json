{
    "version": 2,
    "framework": null,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/app/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "APP_NAME": "X Thread Analyzer",
        "DEBUG": "False",
        "PYTHONPATH": ".",
        "PORT": "8000"
    }
} 